@import "../../../../Common/common.wxss";
.page{
    margin: 0 auto;
    background: #fff;
    padding:10px
}
.component_title{
    font-size: 18px;color: #333;font-weight: bold;
}
.section_title{
    font-size: 14px;color: #333;font-weight: bold;
}
.section_msg{
    background: #eee;color: #333;border-radius: 3px;padding:5px 8px;font-size: 12px
}
input{
    border:1px solid #eee;border-radius: 5px;padding:5px 8px;font-size: 12px
}
label{
    padding: 10px 8px;font-size: 12px;vertical-align: middle
}
.section{
    margin:10px auto
}
.section_demo label{
    max-width:80px;
    text-align: right;
    flex: 1
}
.section_demo input{
    flex:2
}
.section_demo picker{
    flex:2
}
.input-placeholder-other{
    color: green
}
